{
  "name": "quit-fairy",
  "version": "1.2.0",
  "description": "Quit Fairy is a desktop app that tracks time until your workday ends and notifies you when it's time to clock out.",
  "private": false,
  "main": "main.js",
  "author": "Dasom Ko <ds92ko@gmail.com>",
  "type": "module",
  "build": {
    "icon": "public/favicon.png",
    "productName": "Quit Fairy",
    "files": [
      "public/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {},
    "linux": {},
    "mac": {}
  },
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "dev": "rollup -c -w --bundleConfigAsCjs",
    "start": "sirv public --no-clear",
    "electron": "wait-on http://localhost:8080 && electron .",
    "electron-dev": "concurrently \"yarn run dev\" \"yarn run electron\"",
    "preelectron-pack": "yarn run build",
    "electron-pack": "electron-builder"
  },
  "dependencies": {
    "electron-serve": "^1.1.0",
    "electron-store": "^10.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "attractions": "^3.7.2",
    "concurrently": "^7.5.0",
    "electron": "^33.3.1",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.49",
    "rollup": "^3.2.3",
    "rollup-plugin-css-only": "^4.2.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.83.1",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.52.0",
    "svelte-preprocess": "^6.0.3",
    "wait-on": "^6.0.1"
  }
}
